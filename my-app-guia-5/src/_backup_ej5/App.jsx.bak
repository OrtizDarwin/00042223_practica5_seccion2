import { useState } from 'react';
import './App.css';
import { mensaje } from './utils';

function MyButton(props) {
  return <button onClick={props.onClick}>{props.texto}</button>;
}

function App() {
  const [count, setCount] = useState(0);

  function increment() {
    setCount(count + 1);
  }

  return (
    <div>
      <h1>Ejercicio 5 – Guía 5</h1>
      <p>{mensaje}</p>
      <MyButton texto="Haz click" onClick={increment} />
      <p>Contador: {count}</p>
    </div>
  );
}

export default App;
